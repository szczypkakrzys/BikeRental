@model BikeRental.Models.Vehicle

@{
    ViewData["Title"] = "VehicleDetails";
}

<h1>Szczegóły pojazdu</h1>

<div class="w-50 h-50 mx-auto">
    
    <img class="img-fluid" src=@Model.Image alt="bikePhoto" />
    @if(Model.isElectric)
    {
     <p class="text-center">Model elektryczny</p>
    }
    <p class="text-start">@Model.Description</p>
    <p class="text-center">Cena za 1 dzień: <b>@Model.RentCost zł </b></p>
    <div class="container text-center">
        <a class="btn btn-success">Zarezerwuj teraz!</a>
    </div>
</div>

<a class="btn btn-outline-primary" asp-controller="Vehicle" asp-action="ShowAllVehicles">Powrót</a>
